{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "lib": ["esnext"],
    "strict": true,
    "rootDir": "api",
    "plugins": [{
      "name": "nexus/typescript-language-service"
    }],
    "typeRoots": ["node_modules/@types", "types"],
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["types.d.ts", "api"],
}